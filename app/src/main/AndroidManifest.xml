<?xml version="1.0" encoding="utf-8"?>
<manifest xmlns:android="http://schemas.android.com/apk/res/android"
    package="com.app.laesperanzacollege">

    <uses-permission android:name="android.permission.INTERNET" />

    <application
        android:allowBackup="true"
        android:icon="@mipmap/ic_launcher"
        android:label="@string/app_name"
        android:roundIcon="@mipmap/ic_launcher_round"
        android:supportsRtl="true"
        android:theme="@style/AppTheme">
        <activity android:name=".TestActivity" />
        <activity
            android:name=".IntroActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_Material_NoActionBar" />
        <activity android:name=".ActividadesActivity" />
        <activity android:name=".ListarQuizzesActivity" />
        <activity
            android:name=".SplashScreen"
            android:theme="@style/Activity_Splash">
            <intent-filter>
                <action android:name="android.intent.action.MAIN" />

                <category android:name="android.intent.category.LAUNCHER" />
            </intent-filter>
        </activity>
        <activity
            android:name=".AgregarRespuestaActivity"
            android:theme="@style/AppTheme_Material_NoActionBar"/>

        <activity
            android:name=".AgregarPreguntaActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_Material_NoActionBar"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".AgregarQuizActivity"
            android:theme="@style/AppTheme_Material_NoActionBar"
            android:configChanges="keyboardHidden|smallestScreenSize|screenSize|orientation"
            android:windowSoftInputMode="stateHidden" />
        <activity
            android:name=".AgregarUnidActivity"
            android:theme="@style/AppTheme_Material_NoActionBar" />
        <activity android:name=".DashActivity" />
        <activity android:name=".EstActivity" />
        <activity android:name=".CuriosidadesActivity" />
        <activity android:name=".FormulasActivity" />
        <activity
            android:name=".UnidadesActivity"
            android:theme="@style/AppTheme_Material_NoActionBar" />
        <activity android:name=".QuizzesActivity"/>
        <activity
            android:name=".AgregarEstuActivity"
            android:configChanges="keyboardHidden|smallestScreenSize|screenSize|orientation"
            android:theme="@style/AppTheme_Material_NoActionBar" />
        <activity
            android:name=".LoginActivity"
            android:screenOrientation="portrait"
            android:theme="@style/AppTheme_Material_NoActionBar" />
    </application>

</manifest>